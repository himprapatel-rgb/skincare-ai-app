# ============================================================================
# SKINCARE AI APP - ENVIRONMENT VARIABLES TEMPLATE
# ============================================================================
# This file serves as a template for environment configuration.
# Copy this file to .env and update with your actual values.
# NEVER commit .env file to version control!
#
# Author: Skincare AI Development Team
# Version: 1.0.0
# Last Updated: 2025-11-25
# ============================================================================

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_NAME="Skincare AI App"
APP_VERSION="1.0.0"
ENVIRONMENT="development"  # development, staging, production
DEBUG=True
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
HOST="0.0.0.0"
PORT=8000
WORKERS=4  # Number of worker processes (recommended: 2-4 x CPU cores)
RELOAD=True  # Auto-reload on code changes (development only)

# ============================================================================
# SECURITY SETTINGS
# ============================================================================
# JWT (JSON Web Token) Configuration
SECRET_KEY="your-super-secret-key-change-this-in-production-min-32-chars"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Hashing
PASSWORD_BCRYPT_ROUNDS=12

# CORS (Cross-Origin Resource Sharing)
CORS_ORIGINS="http://localhost:3000,http://localhost:8080,http://localhost:5000"
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS="GET,POST,PUT,PATCH,DELETE,OPTIONS"
CORS_ALLOW_HEADERS="*"

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# PostgreSQL Primary Database
DATABASE_URL="postgresql+asyncpg://skincare_user:your_password@localhost:5432/skincare_ai_db"

# Alternative format (if using separate variables)
DB_HOST="localhost"
DB_PORT=5432
DB_NAME="skincare_ai_db"
DB_USER="skincare_user"
DB_PASSWORD="your_password"

# Database Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Database Migration
DB_ECHO=False  # Log all SQL statements (development only)

# ============================================================================
# REDIS CACHE CONFIGURATION
# ============================================================================
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=""  # Leave empty if no password
REDIS_URL="redis://localhost:6379/0"

# Cache TTL (Time To Live) in seconds
CACHE_TTL_SHORT=300      # 5 minutes
CACHE_TTL_MEDIUM=1800    # 30 minutes
CACHE_TTL_LONG=3600      # 1 hour

# ============================================================================
# AI/ML MODEL CONFIGURATION
# ============================================================================
# Skin Analysis Model (PyTorch)
SKIN_ANALYSIS_MODEL_PATH="./models/skin_analysis_v1.pth"
SKIN_ANALYSIS_MODEL_VERSION="1.0.0"
SKIN_ANALYSIS_DEVICE="cuda"  # cuda or cpu
SKIN_ANALYSIS_BATCH_SIZE=4
SKIN_ANALYSIS_CONFIDENCE_THRESHOLD=0.85

# Ingredient Safety Model (TensorFlow)
INGREDIENT_MODEL_PATH="./models/ingredient_safety_v1.h5"
INGREDIENT_MODEL_VERSION="1.0.0"
INGREDIENT_TOKENIZER_PATH="./models/ingredient_tokenizer.pkl"

# Recommendation Engine
RECOMMENDATION_MODEL_PATH="./models/recommendation_v1.pkl"
RECOMMENDATION_TOP_K=10  # Number of top recommendations

# Model Serving
MODEL_WORKERS=2  # Number of parallel model workers
MODEL_TIMEOUT=30  # Model inference timeout (seconds)

# ============================================================================
# FILE STORAGE CONFIGURATION
# ============================================================================
# Local Storage
UPLOAD_DIR="./uploads"
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS="jpg,jpeg,png,webp"

# Image Processing
IMAGE_MAX_WIDTH=1920
IMAGE_MAX_HEIGHT=1920
IMAGE_QUALITY=85
THUMBNAIL_SIZE=300

# AWS S3 (Optional - for production)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
S3_BUCKET_NAME="skincare-ai-storage"
S3_ENABLED=False

# ============================================================================
# THIRD-PARTY API KEYS
# ============================================================================
# SendGrid Email Service
SENDGRID_API_KEY="your-sendgrid-api-key"
SENDGRID_FROM_EMAIL="noreply@skincareai.com"
EMAIL_ENABLED=True

# Twilio SMS Service (Optional)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"
SMS_ENABLED=False

# Google Analytics (Optional)
GA_TRACKING_ID="UA-XXXXX-Y"
GA_ENABLED=False

# Sentry Error Tracking (Optional)
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
SENTRY_ENABLED=False
SENTRY_ENVIRONMENT="development"

# ============================================================================
# EXTERNAL DATA SOURCES
# ============================================================================
# CosIng Database (EU Cosmetic Ingredients)
COSING_API_URL="https://ec.europa.eu/growth/tools-databases/cosing/api/v1"
COSING_CACHE_HOURS=168  # 7 days

# EWG Skin Deep Database
EWG_API_KEY="your-ewg-api-key"
EWG_API_URL="https://api.ewg.org/skindeep/v1"

# PubChem Database
PUBCHEM_API_URL="https://pubchem.ncbi.nlm.nih.gov/rest/pug"